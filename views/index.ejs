<!DOCTYPE html>
<html>

<head>
    <title>Raspimusik</title>
</head>

<body>
    <h1>Raspimusik</h1>

    <iframe name="iframe" style="display:none;"></iframe>

    <button class="btn">a</button>

    <form class="form-group" action="/play" method="post" target="iframe">
        <button class="btn btn-primary input-group-btn" type="submit" value="Play">Play</button>
    </form>

    <form action="/pause" method="post" target="iframe">
        <button type="submit" value="Pause">
    </form>

    <form action="/volUp" method="post" target="iframe">
        <button type="submit" value="+">
    </form>

    <form action="/volDown" method="post" target="iframe">
        <button type="submit" value="-">
    </form>

    <ul>
        <% songs.forEach(function(song) { %>

        <form action="/song" method="post" target="iframe">
            <button readonly class="btn" type="submit" value='<%=song %>' name='title'>
        </form>
        <% }); %>
    </ul>

</body>

</html>