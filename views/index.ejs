<!DOCTYPE html>
<html>

<head>
    <title>Raspimusik</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>

<body>
    <h1>Raspimusik</h1>

    <iframe name="iframe" style="display:none;"></iframe>
    <form action="/play" method="post" target="iframe">
        <button class="btn btn-primary" type="submit" value="Play">
    </form>

    <form action="/pause" method="post" target="iframe">
        <button class="btn btn-primary" type="submit" value="Pause">
    </form>

    <form action="/volUp" method="post" target="iframe">
        <button class="btn btn-primary" type="submit" value="+">
    </form>

    <form action="/volDown" method="post" target="iframe">
        <button class="btn btn-primary" type="submit" value="-">
    </form>

    <ul>
        <% songs.forEach(function(song) { %>

        <form action="/song" method="post" target="iframe">
            <button readonly class="btn btn-primary" type="submit" value='<%=song %>' name='title'> 
        </form>
        <% }); %>
    </ul>

</body>

</html>